enum Role {
  USER
  BALANNCE_RECHARGER
  SELLER
  ADMIN
}

model User {
  id        Int     @id @default(autoincrement())
  email     String  @unique
  name      String?
  googleId  String? @unique
  role      Role    @default(USER)
  img       String?
}

model Wallet {
  id        String  @id
  userId    Int     @unique
  balance   Int     @default(0)
}
